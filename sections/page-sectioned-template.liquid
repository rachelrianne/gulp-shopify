<section
  data-section-type="page-sectioned-template"
  data-section-id="{{ section.id }}"
  class="page-intro {% if section.settings.bg_image != blank %} has-bg-image{% endif %}"
>
  <div class="page-width">
    <h1>{{ page.title }}</h1>

    <div class="rte">
      {{ page.content }}
    </div>
  </div>
</section>

{% if section.settings.bg_image != blank %}
  <style>
    #shopify-section-{{ section.id }} {
      background-image: url({{ section.settings.bg_image | img_url: '1800x' }});
      background-color: {{ section.settings.bg_color }};
    }
  </style>
{% endif %}

{% schema %}
  {
    "name": "Example Section",
    "max_blocks": 12,
    "settings": [
      {
        "type": "text",
        "id": "title",
        "label": "Page Title",
        "default": "Title"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subheading",
        "default": "A little something more."
      },
      {
        "type": "image_picker",
        "id": "bg_image",
        "label": "Background Image"
      }
    ],
    "blocks": [
      {
        "type": "collection",
        "name": "Collection",
        "settings": [
          {
            "label": "Collection",
            "id": "collection",
            "type": "collection"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Example Section",
        "category": "Example",
        "blocks": [
          {
            "type": "collection"
          },
          {
            "type": "collection"
          },
          {
            "type": "collection"
          }
        ]
      }
    ]
  }
{% endschema %}
